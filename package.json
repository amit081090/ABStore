{
    "scripts": {
        "install:all": "npm install && npm run install:client && npm run install:api",
        "install:client": "cd client && npm install",
        "install:api": "cd api && npm install",
        "start:dev": "concurrently \"npm run start:client\" \"npm run start:api\"",
        "start:client": "cd client && npm start",
        "start:api": "cd api && npm run dev",
        "start": "concurrently \"npm run start:client\" \"npm run start:api\""
    },
    "devDependencies": {
        "concurrently": "^8.2.2"
    }
}
